<templates>

    <!-- Head variables -->
    <t t-name="Head" class="app">
        <div>
            <title t-esc="profile.name"></title>
            <!-- Open Graph Stuffs for Social Sharing-->
            <meta property="og:type" content="profile" />
            <meta property="profile:username" t-att-content="profile.name" />
            <meta property="og:image" t-attf-content="{{window.location.href}}static/img/header_img.jpg" />
        </div>
    </t>

    <!-- Navigation -->
    <nav t-name="Nav" class="navbar navbar-expand-lg navbar-dark bg-dark shadow fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <strong t-esc="profile.name"></strong>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item" t-foreach="profile" t-as="pkey" t-key="pkey_index" t-if="pkey_value.id">
                        <a class="nav-link" t-attf-href="#{{ pkey_value.id }}">
                            <i t-attf-class="{{ pkey_value.icon }} pr-1"></i>
                            <span t-esc="pkey[0].toUpperCase() + pkey.slice(1).toLowerCase()"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Full Page Image Header with Vertically Centered Content -->
    <header t-name="Header">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-right">
                    <t t-foreach="profile.links" t-as="link" t-key="link_index">
                        <a t-att-href="link.url">
                            <i t-attf-class="{{ link.icon }} pr-3"></i>
                        </a>
                    </t>
                    <h1 id="title" t-esc="profile.title"></h1>
                    <p class="lead" id="tag_line" t-esc="profile.tag_line"></p>
                </div>
            </div>
        </div>
    </header>

    <!-- Section blueprint-->
    <div t-name="Section" class="col-12" t-att-id="props.data.id">
        <div class="card mt-5 mb-5">
            <div class="card-header bg-success text-white" t-esc="props.data.header"></div>
            <t t-raw="0" />
        </div>
    </div>

    <!-- This card is used for plain entries like publications ans experience -->
    <t t-name="PlainItemCard">
        <t t-call="Section">
            <div class="row row-cols-1 row-cols-md-2">
                <div class="col p-4" t-foreach="props.data.entries" t-as="item" t-key="item_index">
                    <div class="card h-100">
                        <div t-esc="props.secname"></div>
                        <div t-attf-class="card-body {{ (item_index % 2 === 0) ? '': 'bg-light' }}">
                            <h5 class="card-title" t-esc="item.title"></h5>
                            <p t-if="item.sub_title" t-esc="item.sub_title"></p>
                            <p t-esc="item.date"></p>
                            <p t-raw="item.about"></p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <!-- This card is used for img-text entries like tools -->
    <t t-name="FontItemCard">
        <t t-call="Section">
            <div class="col p-3" t-foreach="props.data.entries" t-as="skill" t-key="skill_index">
                <h5 t-esc="skill"></h5>
                <div class="row col-12">
                    <t t-foreach="skill_value" t-as="item" t-key="item_index">
                        <div class="text-center col-12 col-sm-6 col-md-4 col-lg-3">
                            <i t-att-class="item.font" t-attf-style="color: {{item.color}}"></i>
                            <p t-esc="item.name"></p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </t>

    <!-- The full Body-->
    <div t-name="Body">
        <Nav />
        <Header />
        <t t-foreach="profile" t-as="pkey" t-key="pkey_index" t-if="pkey_value.id">
            <t t-if="pkey_value.type == 'fontcard'">
                <FontItemCard data="pkey_value" />
            </t>
            <t t-else="">
                <PlainItemCard data="pkey_value" />
            </t>
        </t>
    </div>

</templates>